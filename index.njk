---
layout: base.njk
title: The Architect
description: Modern cloud, data, and AI architecture
---

<!-- Hero Section avec image de bannière -->
<section class="hero py-5 mb-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8 mx-auto text-center text-white">
        <h1 class="display-4 font-weight-bold mb-3" style="text-shadow: 0 2px 10px rgba(0,0,0,0.5);">{{ metadata.title }}</h1>
        <p class="lead mb-4" style="text-shadow: 0 2px 8px rgba(0,0,0,0.5);">{{ metadata.description }}</p>
      </div>
    </div>
  </div>
</section>

<div class="container home-page" id="articles">
  <div class="row">
    <div class="col-lg-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0">Latest Posts</h2>
        <a href="{{ '/blog/' | url }}" class="btn btn-outline-primary">All Articles →</a>
      </div>
      
      {%- set recentPosts = collections.posts | limit(4) -%}
      {%- for post in recentPosts %}
      <article class="post-preview">
        {% if post.data.image %}
        <div class="post-preview-image mb-3">
          <a href="{{ post.url | url }}">
            <img 
              src="{{ '/img/' + post.data.image | url }}" 
              alt="{{ post.data.title }}"
              loading="lazy"
              class="img-fluid w-100">
          </a>
        </div>
        {% endif %}
        
        <h2 class="post-preview-title">
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h2>
        
        <div class="post-preview-meta">
          <span><i class="far fa-calendar-alt mr-1"></i> {{ post.date | readableDate }}</span>
          {% if post.data.categories %}
          <span class="ml-3">
            <i class="far fa-folder-open mr-1"></i>
            {%- for cat in post.data.categories -%}
              <a href="{{ '/categories/' | url }}#{{ cat | slug }}">{{ cat }}</a>
              {%- if not loop.last %}, {% endif -%}
            {%- endfor -%}
          </span>
          {% endif %}
        </div>
        
        <div class="post-preview-excerpt">
          <p>{{ post.templateContent | cleanExcerpt | truncate(200) }}</p>
        </div>
        
        <a href="{{ post.url | url }}" class="btn btn-primary">Read More →</a>
      </article>
      {%- endfor -%}
      
      <div class="text-center mt-5">
        <a href="{{ '/blog/' | url }}" class="btn btn-lg btn-primary">View All Articles</a>
      </div>
    </div>
    
    <div class="col-lg-4">
      <aside class="sidebar">
        <div class="sidebar-sticky">
          <div class="sidebar-box">
            <h3 class="sidebar-title">About</h3>
            <p>{{ metadata.description }}</p>
            <a href="{{ '/about/' | url }}" class="btn btn-outline-primary btn-sm">Learn More</a>
          </div>
          
          <div class="sidebar-box">
            <h3 class="sidebar-title">Categories</h3>
            <ul class="categories-list">
              {%- for cat, posts in collections.categories %}
              <li>
                <a href="{{ '/categories/' | url }}#{{ cat | slug }}">
                  {{ cat }}
                  <span class="badge">{{ posts.length }}</span>
                </a>
              </li>
              {%- endfor %}
            </ul>
          </div>
          
          <div class="sidebar-box">
            <h3 class="sidebar-title">Follow Me</h3>
            <div class="social-media">
              <a href="https://github.com/AbdelfattahAbouelaoualim" target="_blank" title="GitHub">
                <i class="fab fa-github"></i>
              </a>
              <a href="https://www.linkedin.com/in/ia-ds-bg/" target="_blank" title="LinkedIn">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>
</div> 