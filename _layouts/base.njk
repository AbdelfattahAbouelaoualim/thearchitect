<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}{{ metadata.title }}</title>
  <meta name="description" content="{% if description %}{{ description }}{% else %}{{ metadata.description }}{% endif %}">
  
  <!-- CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
  
  <!-- Prism CSS for code syntax highlighting -->
  <link rel="stylesheet" href="{{ '/css/prism.css' | url }}">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="{{ '/img/favicon.png' | url }}">
</head>
<body>
  
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light sticky-top">
    <div class="container">
      <a class="navbar-brand" href="{{ '/' | url }}">{{ metadata.title }}</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          {%- for entry in metadata.navigation %}
          <li class="nav-item {% if entry.url == page.url %}active{% endif %}">
            <a class="nav-link" href="{{ entry.url | url }}">{{ entry.title }}</a>
          </li>
          {%- endfor %}
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main>
    {{ content | safe }}
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 mb-4">
          <h5>About</h5>
          <p>{{ metadata.description }}</p>
          <div class="social-media mt-3">
            <a href="https://github.com/AbdelfattahAbouelaoualim" target="_blank" title="GitHub">
              <i class="fab fa-github"></i>
            </a>
            <a href="https://www.linkedin.com/in/ia-ds-bg/" target="_blank" title="LinkedIn">
              <i class="fab fa-linkedin-in"></i>
            </a>
          </div>
        </div>
        <div class="col-lg-4 mb-4">
          <h5>Quick Links</h5>
          <ul>
            {%- for entry in metadata.navigation %}
            <li>
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
            {%- endfor %}
          </ul>
        </div>
        <div class="col-lg-4">
          <h5>Categories</h5>
          <ul>
            {%- for cat, posts in collections.categories %}
            {% if loop.index <= 5 %}
            <li>
              <a href="{{ '/categories/' | url }}#{{ cat | slug }}">{{ cat }}</a>
            </li>
            {% endif %}
            {%- endfor %}
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {{ "now" | date('yyyy') }} {{ metadata.title }} | Made with <i class="fas fa-heart text-danger"></i></p>
      </div>
    </div>
  </footer>

  <!-- Back to Top Button -->
  <div id="back-to-top" class="d-none">
    <a href="#" class="btn btn-primary btn-sm rounded-circle">
      <i class="fas fa-arrow-up"></i>
    </a>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Back to top button
    $(window).scroll(function() {
      if ($(this).scrollTop() > 300) {
        $('#back-to-top').removeClass('d-none').addClass('d-block');
      } else {
        $('#back-to-top').removeClass('d-block').addClass('d-none');
      }
    });
    
    $('#back-to-top a').click(function(e) {
      e.preventDefault();
      $('html, body').animate({scrollTop: 0}, 300);
      return false;
    });
  </script>
</body>
</html> 